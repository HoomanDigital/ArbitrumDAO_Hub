---
interface Point {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  points: Point[];
}

const { points } = Astro.props;
import { paragraphCva, titleCva } from "@/lib/cvas";
---

<section class="grid gap-5 pb-10 md:grid-cols-2 md:gap-10 lg:grid-cols-4">
  {
    points.map(({ title, description, icon }) => (
      <div class="flex flex-col gap-3 rounded-lg bg-[#F0F9FF] p-5">
        <div set:html={icon} />
        <h1 class={titleCva({ size: "sm" })}>{title}</h1>
        <p class={paragraphCva({ size: "md" })}>{description}</p>
      </div>
    ))
  }
</section>

