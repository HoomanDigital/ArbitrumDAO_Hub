---
import { titleCva } from "@/lib/cvas";
import Button from "../ui/button.astro";

interface GovernanceCard {
  title: string;
  description: string;
  buttonLabel: string;
  buttonLink: string;
}

interface Props {
  cards: GovernanceCard[];
}

const { cards } = Astro.props;
---

<section class="flex flex-col gap-10 py-10">
  {/* Section Heading */}
  <div class="flex flex-col gap-2">
    <h2 class={titleCva()}>
      Entropy Advisors: Driving Community<br /> Governance in the Arbitrum DAO
    </h2>
  </div>

  {/* Governance Cards */}
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    {
      cards.map((card, index) => (
        <div class="flex flex-col gap-4 rounded-lg border bg-zinc-50 px-4 py-6  shadow-sm md:rounded-xl">
          {/* Card Content */}
          <div class="flex flex-1 flex-col gap-2">
            <h3 class="text-lg font-medium">{card.title}</h3>
            <p class="text-sm text-gray-600">{card.description}</p>
          </div>

          {/* Call-to-Action Button */}
          <Button arrow variant={"secondary"} href={card.buttonLink}>
            {card.buttonLabel}
          </Button>
        </div>
      ))
    }
  </div>
</section>
