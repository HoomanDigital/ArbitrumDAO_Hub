---
import Faq from "@/components/developer-hub/faq";
import AimCarousal from "@/components/gcp/AimCarousal";
import GamesCarousal from "@/components/gcp/GamesCarousal";
import Subscribe from "@/components/gcp/Subscribe";
import ProgramHero from "@/components/programs/hero-section.astro";
import TeamGrid from "@/components/programs/team-grid.astro";
import UpdatesSection from "@/components/programs/updates-section.astro";
import Button from "@/components/ui/button.astro";
import BlogCard from "@/components/ui/cards/blog-card.astro";
import Seperator from "@/components/ui/seperator.astro";
import { paragraphCva, titleCva } from "@/lib/cvas";
import { getCollection } from "astro:content";
import { GCP_Homepage } from "../../data/homepage/gcp";
import MainLayout from "../../layouts/MainLayout.astro";
const data = await getCollection("blogs", ({ data }) => {
  return data.tag === "GCP";
});
const title = "Gaming Catalyst Program";
const description =
  "The Gaming Catalyst Program (GCP) is designed to immediately expand awareness and adoption of Arbitrum/Orbit/Stylus by builders and players in the Gaming community. It’s designed to fuel game development on the Arbitrum technology, offering funding, tools, and community support to empower creators.";
---

<MainLayout smooth title={title} description={description}>
  <ProgramHero
    title={title}
    description={description}
    image={{
      src: "/gcp/hero.svg",
      alt: "Gaming Catalyst Program",
      className: "aspect-[16/7] w-[100%] object-cover object-center md:w-[40%]",
    }}
    buttons={[
      {
        href: "https://forum.arbitrum.foundation/t/catalyze-gaming-ecosystem-growth-on-arbitrum/22368",
        text: "Arbitrum Forum",
        variant: "secondary",
      },
      {
        href: "https://snapshot.org/#/arbitrumfoundation.eth/proposal/0x1a9f2097b0b5a0021628e9edb0e7c9bffae4fdbb104f9996463e40a3129c7718",
        text: "Snapshot",
        variant: "secondary",
      },
      {
        href: "https://www.tally.xyz/gov/arbitrum/proposal/53472400873981607449547539050199074000442490831067826984987297151333310022877?govId=eip155:42161:0x789fC99093B09aD01C34DC7251D0C89ce743e5a4",
        text: "Tally",
        variant: "secondary",
      },
    ]}
  />
  <Seperator />
  <section
    class="flex flex-col-reverse items-center justify-between gap-6 md:flex-row lg:gap-28 lg:p-5"
  >
    <div class="flex flex-col gap-8 md:w-[55%]">
      <div class="flex flex-col gap-2 lg:gap-4">
        <p
          class="text-xs font-normal uppercase tracking-widest text-gray-500 lg:text-sm"
        >
          What is GCP?
        </p>
        <div class="">
          <h1 class="text-lg font-medium md:text-2xl lg:text-3xl">
            <span>Gaming Catalyst Program (GCP)</span>
            <br class="md:hidden lg:block" />
            <span class={"text-primary"}
              >Fueling the Future of Gaming on Arbitrum</span
            >
          </h1>
        </div>
        <p
          class={"pt-3 font-os text-xs font-light text-gray-500 md:text-base lg:pt-0 lg:text-base"}
        >
          The Gaming Catalyst Program (GCP) is Arbitrum’s key initiative to
          transform blockchain gaming. With a funding pool of 100 to 200 million
          ARB tokens, the GCP supports top game studios and independent
          developers in creating innovative, high-quality games on the Arbitrum
          network.
          <br /><br />
          By providing strategic funding, mentorship, and resources, the GCP positions
          Arbitrum as a leader in Web3 gaming, driving innovation and shaping the
          future of decentralized gaming on the blockchain.
        </p>
      </div>

      <div class="flex items-start gap-4">
        <div class="flex flex-col items-start">
          <Button arrow variant="outline">How to Apply </Button>
          <p
            class="mt-2 text-center text-xs font-normal uppercase tracking-widest text-gray-500"
          >
            To be Announced
          </p>
        </div>
      </div>
    </div>
    <div class="md:w-[45%]">
      <img
        src={"/gcp/earth.svg"}
        alt={""}
        class="aspect-[3/2] w-full md:aspect-auto lg:aspect-[16/12]"
      />
    </div>
  </section>
  <Seperator />
  <section class="flex flex-col gap-10 py-5 md:gap-20 md:py-10">
    <div class="flex flex-col gap-6 md:gap-4">
      <h2
        class="text-lg font-medium md:text-xl lg:w-[35%] lg:text-2xl xl:w-[30%]"
      >
        This Program Aims to
      </h2>
      <div class="ml-auto flex flex-col gap-10 md:w-2/3 lg:w-1/2 lg:gap-5">
        <p
          class="font-os text-xs font-light text-gray-500 md:text-sm lg:text-base"
        >
          At its core, the Arbitrum DAO Gaming Catalyst Program (GCP) is about
          fostering innovation and creativity within the blockchain gaming
          space. By offering a combination of financial resources, technical
          tools, and expert guidance, GCP aims to lower the barriers for game
          developers to build and thrive on the Arbitrum network.
        </p>
        <Button arrow variant="secondary" href="https://t.me/gcpopen"
          >Join Telegram Community</Button
        >
      </div>
    </div>
    <AimCarousal client:load />
  </section>
  <Seperator />
  <!-- second section -->
  <section
    class="flex flex-col-reverse items-center justify-between gap-6 md:flex-row lg:gap-28 lg:p-5"
  >
    <div class="flex flex-col gap-8 md:w-[55%]">
      <div class="flex flex-col gap-2 lg:gap-4">
        <h2 class="text-lg font-medium md:text-2xl lg:text-3xl">
          <span>Strategic Focus on Big Studios</span>
        </h2>

        <p
          class={"pt-3 font-os text-xs font-light text-gray-500 md:text-base lg:pt-0 lg:text-base"}
        >
          The Gaming Catalyst Program (GCP) prioritizes partnerships with big
          game studios to bring large-scale, high-quality games to the Arbitrum
          network. By backing established studios, GCP aims to position Arbitrum
          as a leader in AAA-level games, driving mass adoption in Web3 gaming.
          <br /><br />
          The program also offers two types of grants: one for big studios working
          on high-budget projects and another for independent builders, providing
          up to 50k ARB to 500k ARB. Both are milestone-based, ensuring funds are
          released as key development goals are achieved, promoting growth across
          all levels.
        </p>
      </div>

      <Button arrow variant="default">Publisher Grant</Button>
    </div>
    <div class="md:w-[45%]">
      <img
        src={"/gcp/wheel.svg"}
        alt={"wheel"}
        class="aspect-[3/2] w-full md:aspect-auto lg:aspect-[16/12]"
      />
    </div>
  </section>

  <Seperator />
  <!-- thrid section -->
  <section
    class="flex flex-col-reverse items-center justify-between gap-6 md:flex-row lg:gap-28 lg:p-5"
  >
    <div class="flex flex-col gap-8 md:w-[55%]">
      <div class="flex flex-col gap-2 lg:gap-4">
        <h2 class="text-lg font-medium md:text-2xl lg:text-3xl">
          <span>Funding for </span>

          <span class={"text-primary"}
            >Game Developers and Ecosystem Growth</span
          >
        </h2>
        <p
          class={"pt-3 font-os text-xs font-light text-gray-500 md:text-base lg:pt-0 lg:text-base"}
        >
          The Arbitrum DAO Gaming Catalyst Program (GCP) allocates 100m-200m ARB
          to support game development and ecosystem growth. 80% of the 80m-160m
          ARB goes to publisher grants, while 20% supports independent
          developers. Additionally, 20m-40m ARB funds infrastructure bounties,
          with unused funds returned to the DAO.
        </p>
      </div>
    </div>
    <div class="md:w-[45%]">
      <img src={"/gcp/funding.svg"} alt={"wheel"} class="w-full" />
    </div>
  </section>
  <Seperator />
  <section
    class="flex flex-col gap-6 rounded-small bg-primary-light px-5 py-8 md:rounded-large md:px-14 md:py-10"
  >
    <h2
      class={titleCva({
        size: "xl",
      })}
    >
      Programs
    </h2>
    <div class="flex flex-col gap-4">
      <p class={paragraphCva()}>GCP Programs are in progress.</p>
      <p class={paragraphCva()}>
        Don’t forget to subscribe to our newsletter to stay updated.
      </p>
      <Button href="#newsletter" variant="secondary" arrow
        >Subscribe to Newsletter</Button
      >
    </div>
  </section>
  <Seperator />
  <!-- fourth section -->
  <section
    class="flex flex-col-reverse items-center justify-between gap-6 md:flex-row lg:gap-28 lg:p-5"
  >
    <div class="flex flex-col gap-8 md:w-[55%]">
      <div class="flex flex-col gap-2 lg:gap-4">
        <h2 class="text-lg font-medium md:text-2xl lg:text-3xl">
          Developer Benefits
        </h2>

        <p
          class={"pt-3 font-os text-xs font-light text-gray-500 md:text-base lg:pt-0 lg:text-base"}
        >
          As a developer, building on Arbitrum through the Gaming Catalyst
          Program (GCP) offers access to funding, cutting-edge blockchain
          technology, and a robust gaming ecosystem. You'll benefit from
          milestone-based grants, expert support, and the opportunity to create
          immersive Web3 gaming experiences while reaching a global audience.
          Arbitrum’s fast, scalable, and secure network ensures your games
          thrive in the competitive gaming landscape.
        </p>
      </div>

      <Button href="https://discord.com/invite/arbitrum" arrow variant="default"
        >Join Arbitrum Developer Network</Button
      >
    </div>
    <div class="md:w-[45%]">
      <img
        src={"/gcp/developer.svg"}
        alt={"developer"}
        class="aspect-[3/2] w-full md:aspect-auto lg:aspect-[16/12]"
      />
    </div>
  </section>
  <Seperator />
  <GamesCarousal client:load transition:persist />

  <Seperator />

  <section class="flex flex-col gap-6 py-10">
    <h2 class="text-lg font-medium lg:text-2xl">Blogs</h2>
    <ul class="grid grid-rows-1 gap-5 md:grid-cols-2 lg:grid-cols-3">
      {
        data
          ?.sort((a, b) =>
            new Date(a.data.pubDate) > new Date(b.data.pubDate) ? -1 : 1,
          )
          ?.slice(0, 3)
          ?.map(({ data, slug }) => (
            <BlogCard blog={data} type="blog" link={`/blog/${slug}`} />
          ))
      }
    </ul>
  </section>
  <Seperator />
  <section class="flex flex-col gap-6">
    <h2
      class={titleCva({
        size: "xl",
      })}
    >
      News
    </h2>
    <div class="flex flex-col gap-4">
      <p class={paragraphCva()}>News will be updated soon.</p>
      <p class={paragraphCva()}>
        Don’t forget to subscribe to our newsletter to stay updated.
      </p>
      <Button href="#newsletter" variant="default" arrow
        >Subscribe to Newsletter</Button
      >
    </div>
  </section>
  <Seperator />
  <TeamGrid
    members={GCP_Homepage?.team}
    columns={4}
    mobileColumns={1}
    title="Team"
  />
  <Seperator />
  <TeamGrid
    members={GCP_Homepage?.council}
    columns={5}
    mobileColumns={1}
    title="Council Members"
  />
  <Seperator />
  <UpdatesSection
    title="Stay Updated with GCP"
    description="Explore ongoing initiatives, achievements, and goals shaping the Gaming Ecosystem. A guide for informed and effective community participation."
    button={{
      text: "View all Updates on Forum",
      href: "https://forum.arbitrum.foundation/t/gcp-update-thread/24982",
    }}
    updates={[
      {
        title: "Update #2",

        link: "https://drive.google.com/file/d/1X7UTukJwkUOLKqPtsIZYncVQ-LPd-KYx/view",
      },
      {
        title: "Update #1",

        link: "https://drive.google.com/file/d/15FIWIPNlIsmoeIxWCwwf3Nuq1mKVWHXN/view",
      },
    ]}
  />
  <Seperator />
  <Subscribe client:load />
  <Seperator />
  <Faq client:load questions={GCP_Homepage?.questions} />
</MainLayout>
