---
import GradientHead from "@/components/ui/gradient-head.astro";
import Seperator from "@/components/ui/seperator.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { proseClasses } from "@/lib/classes";
import { getEntry } from "astro:content";

const pathname = Astro.url.pathname;

const { render, data } = await getEntry("Incentive_Programs", "index");
const { Content } = await render();
---

<MainLayout
  image="/meta/incentive.png"
  title={data.title}
  description={data.description}
  smooth
>
  <GradientHead
    className="my-5 md:my-10 "
    title={data.title}
    description={data.description}
    buttons={data.buttons}
  />

  <Seperator />
  <article class={proseClasses}>
    <Content />
  </article>
</MainLayout>
